{
	"compileOnSave": true,

	"compilerOptions": {
		"target": "ES2018",
		
		"esModuleInterop": true,

		"module": "nodenext",

		"moduleResolution": "node16",

		"experimentalDecorators": true,

		"emitDecoratorMetadata": true,

		"inlineSourceMap": true,

		"noImplicitThis": true,

		"noUnusedLocals": true,

		"stripInternal": true,

		"pretty": true,

		"declaration": true,

		"outDir": "dist",

		"baseUrl": "./"
	},

	"exclude": ["node_modules"]
}
