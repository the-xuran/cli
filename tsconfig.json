{
	"compileOnSave": true,

	"compilerOptions": {
		"target": "ES2018",
		"esModuleInterop": true,

		"module": "nodenext",

		"resolveJsonModule": true,

		"moduleResolution": "nodenext",

		"experimentalDecorators": true,

		"emitDecoratorMetadata": true,

		"inlineSourceMap": true,

		"noImplicitThis": true,

		"noUnusedLocals": true,

		"stripInternal": true,

		"pretty": true,

		"declaration": true,

		"outDir": "lib",

		"baseUrl": "./",

		"paths": { "*": ["bin/*"], "libs/*": ["libs/*"] }
	},

	"exclude": ["lib", "node_modules"]
}
