{
	"name": "cli",
	"version": "1.0.0",
	"description": "the xuran cli",
	"bin": {
		"create-xuran": "dist/index.js"
	},
	"files": [
		"dist",
		"templates"
	],
	"engines": {
		"bun": ">=1.2.0"
	},
	"scripts": {
		"build": "tsdown -c tsdown.config.ts",
		"watch": "tsdown -c tsdown.config.ts -w",
		"dev": "bun run build && create-xuran",
		"format": "prettier \"./src/**/*.{js,jsx,ts,tsx,vue}\" --write",
		"prepare": "husky"
	},
	"keywords": [
		"cli",
		"create-xuran"
	],
	"author": "xuran",
	"license": "MIT",
	"lint-staged": {
		"*.{js,ts,md}": [
			"prettier --write --config .prettierrc.json --ignore-path .prettierignore",
			"git add -u"
		]
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/inquirer": "^9.0.9",
		"@types/node": "^24.3.0",
		"chalk": "^5.6.0",
		"commander": "^14.0.0",
		"fs-extra": "^11.1.1",
		"husky": "^9.1.7",
		"inquirer": "^9.2.8",
		"lint-staged": "^16.1.5",
		"ora": "^7.0.1",
		"prettier": "^3.6.2",
		"tsdown": "^0.14.2"
	}
}
